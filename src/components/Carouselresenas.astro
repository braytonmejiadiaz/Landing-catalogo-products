<style>
  .carousel-container {
    width: 100%;
    display: flex;
    animation: scroll 20s linear infinite;
  }

  .carousel-item {
    flex: 0 0 30%;
    box-sizing: border-box;
    padding: 1rem; /* Ajuste del padding */
  }

  .carousel-item > div {
    background-color: white;
    padding: 1.5rem;
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    text-align: center;
  }

  .carousel-item h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: #4a5568;
    margin-bottom: 0.5rem;
  }

  .carousel-item p {
    font-size: 1rem;
    color: #718096;
    margin-bottom: 1rem;
  }

  .carousel-item small {
    font-size: 0.875rem;
    color: #a0aec0;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }

  /* Media Queries para hacerlo Responsive */
  @media (max-width: 768px) {
    .carousel-item {
      flex: 0 0 50%; /* Dos elementos en pantallas medianas */
    }
    .carousel-item h3 {
      font-size: 1.125rem; /* Ajuste del tamaño de la fuente */
    }

    .carousel-item p {
      font-size: 0.9rem; /* Ajuste del tamaño de la fuente */
    }
  }

  @media (max-width: 576px) {
    .carousel-item {
      flex: 0 0 100%; /* Un elemento por fila en pantallas pequeñas */
    }
    .carousel-item h3 {
      font-size: 1rem; /* Ajuste del tamaño de la fuente */
    }

    .carousel-item p {
      font-size: 0.875rem; /* Ajuste del tamaño de la fuente */
    }
  }
</style>

