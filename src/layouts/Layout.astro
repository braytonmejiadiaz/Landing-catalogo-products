<style is:global>
	html{
		scroll-behavior: smooth;
	}
	body {
		
		font-family: 'Merriweather', serif;
		display: flex;
		flex-direction: column;
	}
	@media(prefers-reduce-motion:reduce){
		html{
			scroll-behavior: auto;
		}
	}
</style>